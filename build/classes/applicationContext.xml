<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
  
    <bean id="address" class="com.home.Address">
        <constructor-arg value="isfahan"></constructor-arg>
        <constructor-arg value="sharif"></constructor-arg>
        <constructor-arg value="iran"></constructor-arg>
    </bean>
    
    <bean id="studentbean" class="com.home.Student">  
        <property name="name" value="Sepehr mollaei"></property>  
    </bean>  
  
    <bean id="emp" class="com.home.Employee">
        <constructor-arg value="10" type="int"></constructor-arg>
        <constructor-arg value="sepehr mollaei" type="String"></constructor-arg>
        <constructor-arg>
            <ref bean="address"></ref>
        </constructor-arg>
    </bean>
    
</beans>  
